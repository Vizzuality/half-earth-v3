{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "paths": {
    "@components": ["components/*"],
    "@containers": ["containers/*"],
    "@scenes": ["scenes/*"],
    "@layouts": ["layouts/*"],
    "@pages": ["pages/*"],
    "@icons": ["icons/*"],
    "@logos": ["logos/*"],
    "@styles": ["styles/*"],
    "@router": ["router/*"],
    "@selectors": ["selectors/*"],
    "@sideEffects": ["sideEffects/*"],
    "@actions": ["actions/*"],
    "@utils": ["utils/*"],
    "@constants": ["constants/*"],
    "@redux_modules": ["redux_modules/*"],
    "@services": ["services/*"],
    "@reducerRegistry": ["reducerRegistry/*"],
    "@sceneConfigs": ["sceneConfigs/*"],
    "@hooks": ["hooks/*"],
    "@images": ["images/*"],
    "@gifs": ["gifs/*"],
    "@sounds": ["sounds/*"],
    "@store-middleware": ["store/store-middleware/*"]
  },
  "include": ["declarations.d.ts", "**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", ".storybook", "cypress"]
}
